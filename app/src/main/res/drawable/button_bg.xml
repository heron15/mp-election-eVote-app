<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mainColor" /> <!-- Shadow color -->
            <corners android:radius="20dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>

    <!-- Button Background -->
    <item android:bottom="4dp"> <!-- Adjust this value to control the shadow offset -->
        <shape android:shape="rectangle">
            <solid android:color="@color/mainColor" /> <!-- Button background color -->
            <corners android:radius="20dp" /> <!-- Adjust radius to match the shadow's radius -->
        </shape>
    </item>
</layer-list>
